<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<HBox maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="300" prefWidth="400" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.gui_caht_0988.HelloController">
    <TextArea fx:id="onlineUsers" editable="false" prefWidth="125">
      <effect>
         <InnerShadow height="15.0" radius="7.0" width="15.0" />
      </effect></TextArea>

    <VBox alignment="CENTER" prefHeight="300" prefWidth="275">
        <TextArea fx:id="textArea" editable="false" prefHeight="250" prefWidth="275" style="-fx-control-inner-background: #CCCCFF; -fx-font-family: Consolas; -fx-highlight-fill: #00ff00; -fx-highlight-text-fill: #0000FF; -fx-text-fill: #000000;">
         <font>
            <Font size="16.0" />
         </font>
         <effect>
            <InnerShadow height="15.0" radius="7.0" width="15.0" />
         </effect></TextArea>

    <HBox>
        <TextField fx:id="textField" onAction="#send" prefHeight="25" prefWidth="195" />
        <Button onAction="#send" prefHeight="25" prefWidth="80" style="-fx-background-color: #CC99FF;" text="Отправить" textAlignment="CENTER">
            <effect>
               <InnerShadow height="15.0" radius="7.0" width="15.0" />
            </effect></Button>
    </HBox>
    <Button onAction="#connect" prefHeight="25" prefWidth="275" style="-fx-background-color: #330066;" text="Подключиться" textFill="#ccccff">
         <effect>
            <InnerShadow height="15.0" radius="7.0" width="15.0" />
         </effect></Button>

</VBox>
</HBox>
